<% include  ../partials/header.ejs %>

    <div class='row' style='text-align:center;'>
        <h1> Create a new Floorplan: </h1>
        
        <div style='width:30%; margin: 40px auto;'>
            <form action="/<%= user.id %>/floorplan/new" method="POST">
                <div class='form-group'>
                    <input class='form-control' type="text" name="name" placeholder="name">    
                </div>
                <div class='form-group'>
                    <div class="radio">
                          <label><input  type="radio" name="type" value='Kitchen'>Kitchen</label>
                    </div>
                    <div class="radio">
                          <label><input type="radio" name="type" value='Living Room'>Living Room</label>
                    </div>
                    <div class="radio">
                          <label><input type="radio" name="type" value='Bathroom'>Bathroom</label>
                    </div>
                    <div class="radio">
                          <label><input type="radio" name="type" value='Bedroom'>Bedroom</label>
                    </div>
                </div>
                <div class='form-group'>
                    <button class='btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
                
            </form> 
            <a href="/<%= user.id %>/floorplan/">Go Back</a>
        </div>
    </div>
<% include  ../partials/footer.ejs %>